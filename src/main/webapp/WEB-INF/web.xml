<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="RhymeStore" version="2.5">

	<display-name>Rhyme Store</display-name>

	<!-- Wink main servlet -->
	<servlet>
		<servlet-name>WinkServlet</servlet-name>
		<servlet-class>org.apache.wink.server.internal.servlet.RestServlet</servlet-class>
		<init-param>
			<param-name>applicationConfigLocation</param-name>
			<param-value>/WEB-INF/application.cfg</param-value>
		</init-param>
	</servlet>

	<!-- Wink console servlet -->
	<servlet>
		<servlet-name>WinkAdmin</servlet-name>
		<servlet-class>org.apache.wink.server.internal.servlet.AdminServlet</servlet-class>
	</servlet>
	
	<!-- Servlet mappings -->
	
	<servlet-mapping>
		<servlet-name>WinkAdmin</servlet-name>
		<url-pattern>/console</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>WinkServlet</servlet-name>
		<url-pattern>/rhyme</url-pattern>
	</servlet-mapping>
	
	<!-- Main document -->
	
	<welcome-file-list>
		<welcome-file>/WEB-INF/jsp/add.jsp</welcome-file>
	</welcome-file-list>

</web-app>

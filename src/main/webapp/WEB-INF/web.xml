<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="RhymeStore" version="2.5">

	<display-name>Rhymestore</display-name>
	
	<!-- Startup ContextListener -->
	<listener>
		<listener-class>com.rhymestore.web.StartupContextListener</listener-class>
	</listener>
	
	<!-- Rhyme servlet -->
	<servlet>
		<servlet-name>RhymeServlet</servlet-name>
		<servlet-class>com.rhymestore.web.RhymeServlet</servlet-class>
	</servlet>

	<!-- Servlet mappings -->
	<servlet-mapping>
		<servlet-name>RhymeServlet</servlet-name>
		<url-pattern>/rhyme</url-pattern>
	</servlet-mapping>

	<!-- Main document -->
	<welcome-file-list>
		<welcome-file>/jsp/rhymestore.jsp</welcome-file>
	</welcome-file-list>

</web-app>
